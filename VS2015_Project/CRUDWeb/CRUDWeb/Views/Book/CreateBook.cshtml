@model Book
@{
    ViewBag.Title = "CreateBook";
}

<h2>CreateBook</h2>

<div class="container">
    <div class="row">
        @using (Html.BeginForm("CreateBook", "Book", FormMethod.Post))
        {
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "col-md-2" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-contorl" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Author, new { @class = "col-md-2" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.Author, new { @class="form-contorl" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Publisher, new { @class = "col-md-2" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.Publisher, new { @class = "form-contorl" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Page, new { @class = "col-md-2" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.Page, new { @class = "form-contorl" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Price, new { @class = "col-md-2" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.Price, new { @class = "form-contorl" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Description, new { @class = "col-md-2" })
                    <div class="col-md-8">
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-contorl",@cols=80,@rows=5 })
                    </div>
                </div>
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <a class="close" data-dismiss="alert" href="#">×</a>
                        @Html.ValidationSummary()
                    </div>
                }
            </div>
            <input type="submit" value="新增" class="btn btn-default"/>
        }
    </div>
</div>